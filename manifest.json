{
  "manifest_version": 2,

  "name": "Oblik.us",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
  "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["style.css"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    "style.css"
  ]
}